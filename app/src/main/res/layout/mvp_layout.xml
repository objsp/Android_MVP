<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Android MVP架构"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/id_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:inputType="numberSigned"
        android:layout_marginTop="10dp"
        android:hint="请输入身份证号" />

    <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_input"
        android:layout_marginTop="5dp"
        android:hint="请输入姓名" />

    <EditText
        android:id="@+id/addr_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_input"
        android:layout_marginTop="5dp"
        android:hint="请输入身份证住址" />

    <Button
        android:id="@+id/input_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addr_input"
        android:text="保存个人信息" />

    <TextView
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/input_confirm"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_orange_dark"
        android:padding="10dp"
        android:text="暂无数据信息" />

    <Button
        android:id="@+id/get_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show"
        android:text="获取个人信息" />
</RelativeLayout>
